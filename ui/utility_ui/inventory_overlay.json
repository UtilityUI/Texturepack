{
	"namespace":"inventory_overlay",
	"drag_inventory_overlay@common.button":{
		"type":"input_panel",
		"size":[
			162,
			55
		],
		"anchor_from":"right_middle",
		"anchor_to":"right_middle",
		"draggable":"both",
		"controls":[
			{
				"draggble_inventory_overlay@inventory_overlay.hotbar_grid":{
					
				}
			}
		]
	},
	"hotbar_grid":{
		"type":"panel",
		"anchor_from":"right_middle",
		"anchor_to":"right_middle",
		"size":[
			162,
			55
		],
		"clips_children":true,
		"controls":[
			{
				"inventory_grid":{
					"type":"grid",
					"collection_name":"hotbar_items",
					"grid_dimensions":[
						9,
						4
					],
					"grid_item_template":"inventory_overlay.hotbar_grid_item",
					"offset":[
						0,
						-10
					],
					"size":[
						"162px",
						"54px + 16px"
					]
				}
			}
		]
	},
	"hotbar_grid_item":{
		"type":"panel",
		"anchor_from":"right_middle",
		"anchor_to":"right_middle",
		"$durability_bar_required":true,
		"$item_collection_name":"hotbar_items",
		"$stack_count_required":true,
		"controls":[
			{
				"stack_count_label_mods@common.stack_count_label":{
					"layer":7
				}
			},
			{
				"items_render_mods@common.item_renderer":{
					"layer":6,
					"size":[
						16,
						16
					]
				}
			},
			{
				"durability_mods@common.durability_bar":{
					"layer":7
				}
			},
			{
				"textires_hotbar_grid@inventory_overlay.textires_hotbar_grid":{

				}
			}
		]
	},
	"textires_hotbar_grid":{
		"type":"panel",
		"anchor_from":"right_middle",
		"anchor_to":"right_middle",
		"controls":[
			{
				"textures_inv":{
					"type":"image",
					"texture":"textures/ui/hud_tip_text_background",
					"alpha":0.45,
					"size":[
						16.5,
						16.5
					],
					"$durability_bar_required":true,
					"$item_collection_name":"hotbar_items",
					"$stack_count_required":true
				}
			}
		]
	}
}